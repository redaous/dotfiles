#/bin/bash

rm -f installer.tar install.tar.gz

tar cf install.tar $(ls -1A)
tar --delete -f install.tar .git
tar --delete -f install.tar .gitignore
tar --delete -f install.tar .gitattributes
tar --delete -f install.tar README
tar --delete -f install.tar TODO
tar --delete -f install.tar build
tar --delete -f install.tar addpayload.sh
tar --delete -f install.tar install.sh
tar --delete -f install.tar install.sh.in
tar --delete --wildcards -f install.tar .*.swp

gzip install.tar

